@model IEnumerable<Point_Of_Sale.Customer>

@{
    ViewBag.Title = "Index";
}

@*<h2 style="text-align:center; color:chocolate; margin-bottom:30px; margin-bottom:50px;"><u>Customer Information Dashboard</u></h2>*@

<div class="row">
    <div class="col-md-12" style="text-align: center">
        <h2 style="font-family: 'Kalam', cursive">Customer Information</h2>
        <hr />
    </div>
</div>

<a href="../Customer/Create" class="btn btn-success" style="margin-bottom:30px;">Create New</a>

<table id="myTable" class="display">
    <thead>
        <tr>
            <th>Customer Email</th>
            <th>Order Number</th>
            <th>Date</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.ID }) |*@
            @*@Html.ActionLink("Details", "Details", new { id=item.ID }) |*@
            @*@Html.ActionLink("Delete", "Delete", new { id=item.ID })*@

            <a href="../Customer/Edit/@item.ID" class="btn btn-info">Edit</a>
            <a href="../Customer/Delete/@item.ID" class="btn btn-danger">Delete</a>
        </td>
    </tr>
}

</table>
