@model IEnumerable<Point_Of_Sale.Purchase>

@{
    ViewBag.Title = "Index";
}

@*<h2 style="text-align:center; color:chocolate; margin-bottom:30px; margin-bottom:50px;"><u>Purchase Dashboard</u></h2>*@

<div class="row">
    <div class="col-md-12" style="text-align: center">
        <h2 style="font-family: 'Kalam', cursive">Purchase Information</h2>
        <hr />
    </div>
</div>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@

<table id="myTable" class="display">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Product Name</th>
            <th>Quentity</th>
            <th>Price</th>
            <th>Total Price</th>
            <th>Action</th>
        </tr>
    </thead>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.CustomerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>                                              
            @Html.DisplayFor(modelItem => item.TotalPrice)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })*@

            <a href="../Purchase/Edit/@item.ID" class="btn btn-info">Edit</a>
            <a href="../Purchase/Delete/@item.ID" class="btn btn-danger">Delete</a>
        </td>
    </tr>
}

</table>
