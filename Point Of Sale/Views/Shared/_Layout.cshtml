<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - POS - Application</title>

    @*<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css"
          integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">*@
    @*<link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />*@
    
    <link rel="stylesheet" type="text/css" href="/fontawesome-free-5.6.3-web/css/all.css" />
    <link rel="stylesheet" type="text/css" href="/Data-Table/datatables.min.css"/>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container-fluid">
        <nav class="navbar navbar-light" style="background-color: #e3f2fd; margin-top:-40px;">
            <div class="container-fluid">
                @Html.ActionLink("Point Of Sale", "", "", new { area = "" }, new { @class = "navbar-brand" })

                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>

                <div class="collapse navbar-collapse" id=".navbar-collapse">
                    <ul class="nav navbar-nav">

                        @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Users<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Employee", "Index", "Employee")</li>
                                <li>@Html.ActionLink("Employee Salary", "Index", "EmployeeSalary")</li>
                                <li>@Html.ActionLink("Employee Admin", "Index", "EmployeeAdmin")</li>
                            </ul>
                        </li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">References <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Country", "Index", "Country")</li>
                                <li>@Html.ActionLink("City", "Index", "City")</li>
                            </ul>
                        </li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Product <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Brand", "Index", "Brand")</li>
                                <li>@Html.ActionLink("Category", "Index", "Category")</li>
                                <li>@Html.ActionLink("Unit", "Index", "Unit")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Product", "Index", "Product")</li>
                                <li>@Html.ActionLink("Product Price", "Index", "ProductPrice")</li>
                                <li>@Html.ActionLink("Product Image", "Index", "ProductImage")</li>
                            </ul>
                        </li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Purchase and Customer<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Purchase", "Index", "CustomerAndPurchase")</li>
                                <li>@Html.ActionLink("Customer Information", "Index", "Customer")</li>
                                <li>@Html.ActionLink("Purchase Information", "Index", "Purchase")</li>
                            </ul>
                        </li>

                        @*<li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@

                    </ul>
                    <form class="navbar-form navbar-left">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Search">
                        </div>
                        <button type="submit" class="btn btn-default">Submit</button>
                    </form>
                    @Html.Partial("_LoginPartial")
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Sunil Chandra Karmakar</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="~/Scripts/CustomerAndPurchaseScript.js"></script>
    @*<script type="text/javascript" charset="utf-8" src="http://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>*@
    <script type="text/javascript" charset="utf-8" src="/Data-Table/datatables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>

</body>
</html>
